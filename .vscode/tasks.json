{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-project",
            "type": "shell",
            "command": "(cd build || {mkdir build && cd build;}; cmake .. && make)",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run-project",
            "type": "shell",
            "command": "./build/src/sim.exe",
            "problemMatcher": [],
        }
    ]
}